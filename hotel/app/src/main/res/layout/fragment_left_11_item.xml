<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        
        <!-- 头像 -->
        <FrameLayout
            android:id="@+id/f11_item_frameLayout"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView 
	            android:id="@+id/f11_item_img"
	            android:layout_width="80dp"
	            android:layout_height="80dp"
	            android:src="@drawable/img_failure"/>
            <ImageView 
                android:id="@+id/f11_item_hadRead"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/point"/>
           
        </FrameLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/f11_item_frameLayout">
            <TextView 
                android:id="@+id/f11_item_title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:maxLines="1"
                android:text="This is title!"
                android:textSize="15dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/f11_item_summary" 
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:maxLines="3"
                android:text="This is summary of information,I want to know how it's is lookes like? I think it's OK!"
                android:textSize="13dp"/>
            <!-- 此条item的ID -->
            <TextView
                android:id="@+id/f11_item_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
    

</LinearLayout>
