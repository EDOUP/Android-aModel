<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#ffffff">

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dip"
        android:background="@drawable/ic_divider1" />

    <TextView
        android:id="@+id/tv1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="酒店简介"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView

            android:id="@+id/tv1_newspic"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:src="@drawable/newspic1"/>

        <TextView
            android:id="@+id/tv1_digest"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignTop="@id/tv1_newspic"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/tv1_newspic"
            android:layout_toEndOf="@id/tv1_newspic"
            android:text="摘要:"/>

        <TextView
            android:id="@+id/tv_activity_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv1_newspic"
            android:text="AAA正文"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</LinearLayout>