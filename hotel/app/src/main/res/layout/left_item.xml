<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">
    <TextView 
        android:id="@+id/left_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center"
        android:text="1"/>
    <ImageView 
        android:id="@+id/left_item_img"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/item_id"
        android:layout_marginLeft="10dp"
        android:src="@drawable/phone"/>
    <TextView
        android:id="@+id/left_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:text="wifi热点"
        android:layout_toRightOf="@+id/left_item_img"/>
    <ImageView 
        android:id="@+id/left_item_point"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:paddingTop="5dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_toRightOf="@+id/left_item_text"
        android:layout_marginLeft="10dp"
        android:src="@drawable/point"/>
    

</RelativeLayout>
