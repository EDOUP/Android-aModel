<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <!-- TopBar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/f2_topBar"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/f2_btn_openDrawer" 
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/drawer"/>
    </LinearLayout>
    
    <EditText
        android:id="@+id/phoneNum_edit"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:background="#ffffff"
        android:textSize="30dp"
        android:textColor="#c2c2c2"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp">
         <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C2C2C2"/>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/keyboard_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/call_key_shape"
                android:src="@drawable/call"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C2C2C2"/>

            <ImageButton
                android:id="@+id/keyboard_send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/call_key_shape"
                android:src="@android:drawable/ic_dialog_email"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C2C2C2"/>

            <ImageButton
                android:id="@+id/keyboard_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/call_key_shape"
                android:src="@drawable/delete"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyboard_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:text="1"
                android:textColor="#c2c2c2"
                android:textSize="50dp"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C2C2C2"/>

            <Button
                android:id="@+id/keyboard_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector"
                android:layout_weight="1"
                android:text="2"
                android:textColor="#c2c2c2"
                android:textSize="50dp"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C2C2C2"/>

            <Button
                android:id="@+id/keyboard_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector"
                android:layout_weight="1"
                android:text="3"
                android:textColor="#c2c2c2"
                android:textSize="50dp"/>
            
        </TableRow>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C2C2C2"/>
        
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button 
                android:id="@+id/keyboard_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector"
                android:layout_weight="1"
                android:text="4"
                android:textColor="#c2c2c2"
                android:textSize="50dp"/>
            
            <TextView 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C2C2C2"/>
            
            <Button 
                android:id="@+id/keyboard_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector"
                android:layout_weight="1"
                android:text="5"
                android:textColor="#c2c2c2"
                android:textSize="50dp"/>
            
            <TextView 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C2C2C2"/>
            
            <Button 
                android:id="@+id/keyboard_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector"
                android:layout_weight="1"
                android:text="6"
                android:textColor="#c2c2c2"
                android:textSize="50dp"/>
            
        </TableRow>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C2C2C2"/>
        
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button 
                android:id="@+id/keyboard_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector"
                android:layout_weight="1"
                android:text="7"
                android:textColor="#c2c2c2"
                android:textSize="50dp"/>
            
            <TextView 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C2C2C2"/>
            
            <Button 
                android:id="@+id/keyboard_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector"
                android:layout_weight="1"
                android:text="8"
                android:textColor="#c2c2c2"
                android:textSize="50dp"/>
            
            <TextView 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C2C2C2"/>
            
            <Button 
                android:id="@+id/keyboard_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector"
                android:layout_weight="1"
                android:text="9"
                android:textColor="#c2c2c2"
                android:textSize="50dp"/>
            
        </TableRow>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C2C2C2"/>
        
        
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button 
                android:id="@+id/keyboard_xing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector"
                android:layout_weight="1"
                android:text="*"
                android:textColor="#c2c2c2"
                android:textSize="50dp"/>
            
            <TextView 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C2C2C2"/>
            
            <Button 
                android:id="@+id/keyboard_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#c2c2c2"
                android:textSize="50dp"/>
            
            <TextView 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C2C2C2"/>
            
            
            <Button 
                android:id="@+id/keyboard_jin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector"
                android:layout_weight="1"
                android:text="#"
                android:textColor="#c2c2c2"
                android:textSize="50dp"/>
            
        </TableRow>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C2C2C2"/>


    </TableLayout>

</LinearLayout>
